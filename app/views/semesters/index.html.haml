!!! 5

%html{:lang => "en"}
  %head
    %title
      Sessions
    = stylesheet_link_tag("frontpage")
    = javascript_include_tag("application")
  %body
    %div#container
      = render :partial => "partial/topbar_index"
      = render :partial => "partial/semester_error"
      %div
        %table{:class => "table table-striped table-hover"}
          %thead
            %tr
              %td.cell_right#create_new_semester
                %h1{:style=>"margin-bottom:0;", :style=>"float:left;"}
                  Sessions
                %a{:href=>"#{new_semester_path}", :style=>"float:right;position:relative;top:30px;"}
                  Create New Session
          %tbody
            - @semesters.each do |semester|
              %tr
                %td.cell_center{:colspan => "2"}
                  = link_to semester.name, semester_path(semester)
                  %div{:style=>"float:right;font-size:0.9em"}
                    = semester.start_date
                    = " - "
                    = semester.end_date
