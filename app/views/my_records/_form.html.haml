= form_for @my_record do |f|
  - if @my_record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@my_record.errors.count, "error")} prohibited this my_record from being saved:"
      %ul
        - @my_record.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
